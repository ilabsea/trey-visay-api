#main-row.row{style: "display:none;z-index:10000;"}
  / uncomment code for absolute positioning tweek see top comment in css
  / <div class="absolute-wrapper"> </div>
  / Menu
  #mySidenav.side-menu
    %nav#nav-bar.navbar.navbar-default{:role => "navigation"}
      / Brand and toggle get grouped for better mobile display
      .navbar-header
        .brand-wrapper
          / Hamburger
          %button.navbar-toggle{:type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          / Brand
          .brand-name-wrapper
            %a.navbar-brand{:href => "javascript:void(0)", :onclick => "closeNav()"}
              ☰  ត្រីវិស័យ
      / Main Menu
      .side-menu-container
        %ul.nav.navbar-nav{style: 'width: 100%'}
          - if current_account.is_admin
            %li{class: params[:controller] == 'accounts' ? 'active' : ''}
              %a{:href => "/accounts"}
                %span.glyphicon.glyphicon-user
                គណនេយ្យ

          %li{class: params[:controller] == 'users' ? 'active' : ''}
            %a{:href => "/"}
              %span.glyphicon.glyphicon-folder-open
              អ្នកប្រើប្រាស់

          %li{class: params[:controller] == 'abouts' ? 'active' : ''}
            %a{:href => "/about"}
              %span.glyphicon.glyphicon-info-sign
              អំពីកម្មវិធី

          %li
            %a{:href => "#{destroy_account_session_path}", "data-method" => "delete", :rel => "nofollow"}
              %span.glyphicon.glyphicon-log-out
              ចាកចេញ

.toolbar
  %span.title{:onclick => "openNav()"}= "☰  #{title}"
  .right-side
    = yield :toolbar_right_side

:javascript
  function openNav() {
    $("#main-row").show();
  }

  function closeNav() {
    $("#main-row").hide();
  }
