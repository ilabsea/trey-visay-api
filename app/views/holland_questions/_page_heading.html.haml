= content_for :title do
  = t('sidebar.holland_question')

.d-flex.flex-row-reverse.flex-wrap
  .d-flex
    %div= render "shared/buttons/download_button", url: holland_questions_path(filter_params.merge(format: :xlsx))

    / More Options
    - if policy(HollandQuestion).create?
      = render "shared/buttons/more_button" do
        = render "shared/buttons/import_from_file_button", url: new_holland_question_importer_path

        = render "shared/buttons/importing_history_button", name: t('sidebar.holland_question'), url: holland_question_importers_path

  / Filter
  .flex-grow-1
    = form_for "", url: holland_questions_path, method: 'get' do |f|
      = render "shared/filters/filter_name", placeholder: t('shared.search_by_code_or_name')
