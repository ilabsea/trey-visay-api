/ Page Heading
= render "page_heading"
= render 'shared/filters/name_code_filter', url: videos_path

.card.shadow.mb-4
  .card-body
    = render "shared/pagination_title", objects: @videos

    .table-responsive.mb-4
      %table.table.table-hover.pretty
        %thead
          %tr
            %th{width: 60} #
            %th= t('shared.code')
            %th= t('shared.name')
            %th= t('video.url')
            %th= t('video.author')
            %th

        %tbody#body-content
          - @videos.each_with_index do |video, index|
            %tr
              %td= @pagy.from + index
              %td= video.code
              %td= video.name
              %td
                = link_to video.url, target: '_blank' do
                  = image_tag video.thumbnail, style: 'width: 50px;'

              %td= video.author
              %td

    = render "shared/footers/pagination"
