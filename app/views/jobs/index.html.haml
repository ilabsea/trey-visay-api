/ Page Heading
= render "page_heading"

= render "filter"

.card.shadow.mb-4
  .card-body
    = render "shared/pagination_title", objects: @jobs

    .table-responsive.mb-4
      %table.table.table-hover.pretty
        %thead
          %tr
            %th{width: 60} #
            %th= t('shared.code')
            %th= t('shared.name_km')
            %th= t('shared.name_en')
            %th= t('job.personality_type')
            %th= t('shared.logo')
            %th= t('job.cluster')
            %th= t('major.number_of_schools')
            %th

        %tbody#body-content
          - @jobs.each_with_index do |job, index|
            %tr
              %td= @pagy.from + index
              %td= link_to job.code, job_path(job), class: 'text-primary'
              %td= job.name_km
              %td= job.name_en
              %td= job.personality_type
              %td
                = image_tag(job.logo_url, width: 50, class: 'rounded-circle') if job.logo.present?
              %td= job.job_cluster_name
              %td= job.schools.length
              %td

    = render "shared/footers/pagination"
