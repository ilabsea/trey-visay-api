.d-sm-flex.align-items-center.justify-content-between.mb-4
  %h1.h3.mb-0.text-gray-800= t('sidebar.intelligence_question')

  %div
    = render "shared/buttons/download_button", url: intelligence_questions_path(filter_params.merge(format: :xlsx))

    / More Options
    - if policy(IntelligenceCategory).create?
      .btn-group
        %button.btn{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :type => "button"}
          %i.fas.fa-ellipsis-v

        .dropdown-menu.dropdown-menu-right
          - if current_account.primary_admin?
            %a.btn.dropdown-item{ href: new_intelligence_question_importer_path }
              %i.fas.fa-file-import.drop-menu-icon
              %span= t("shared.import_from_file")

            %a.btn.dropdown-item{ href: intelligence_question_importers_path }
              %i.fas.fa-history.drop-menu-icon
              %span= t('shared.importing_history', name: t('sidebar.job_cluster'))

            %a.btn.dropdown-item{ href: intelligence_questions_path(format: :json), target: '_blank' }
              %i.fas.fa-download.drop-menu-icon
              %span= t('shared.download_json')

