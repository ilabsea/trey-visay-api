= render 'shared/side_nav'
.container
  .row
    .col-md-10
      .tab{:role => "tabpanel"}
        / Nav tabs
        %ul.nav.nav-tabs{:role => "tablist"}
          %li{:role => "presentation"}
            %a{"aria-controls" => "home", "data-toggle" => "tab", :href => "#Section1", :role => "tab"} ប្រវត្តិរូបសង្ខេប
          %li.active{:role => "presentation"}
            %a{"aria-controls" => "profile", "data-toggle" => "tab", :href => "#Section2", :role => "tab", :aria-expanded => true} លទ្ធផលធ្វើតេស្ត
        / Tab panes
        .tab-content.tabs
          #Section1.tab-pane.fade.in{:role => "tabpanel"}
            .profile-photo.col-md-3
              %br
              %center
                = image_tag @user.photo ,:class=> "img-circular-profile"
            .col-md-9
              %br
              .shadow-box
                .content-box
                  .title
                    %b
                      ពត៍មានផ្ទាល់ខ្លួន
                  .content-display{:style => "margin-top:2rem;"}
                    %form{:role => "form"}
                      .form-group.meddium-margin-bottom
                        %label.small-gray{:for => "full_name"} ឈ្មោះពេញ
                        .content-data
                          %b
                            = " : " + @user.full_name
                      .form-group.meddium-margin-bottom
                        %label.small-gray{:for => "address"} ភេទ
                        .content-data
                          %b
                            = " : " + @user.sex
                      .form-group.meddium-margin-bottom
                        %label.small-gray{:for => "email"} ថ្ងៃខែឆ្នាំកំណើត
                        .content-data
                          %b
                            = " : " + @user.date_of_birth.to_s
                      .form-group.meddium-margin-bottom
                        %label.small-gray{:for => "pwd"} សញ្ជាតិ
                        .content-data
                          %b
                            = " : " + @user.nationality
                      - if @user.phone_number.present?
                        .form-group.meddium-margin-bottom
                          %label.small-gray{:for => "name"} លេខទូរស័ព្ទ
                          .content-data
                            %b
                              = " : " + @user.phone_number
                      .form-group.meddium-margin-bottom
                        %label.small-gray{:for => "address"} ថ្នាក់ទី
                        .content-data
                          %b
                            = " : " + @user.grade
                      .form-group.meddium-margin-bottom
                        %label.small-gray{:for => "email"} រៀននៅសាលា
                        .content-data
                          %b
                            = " : " + @user.school_name
                      .form-group.meddium-margin-bottom
                        %label.small-gray{:for => "pwd"} អាស័យដ្ឋានបច្ចុប្បន្ន
                        .content-data
                          %b
                            = " : " + @user.address
              %br
              .shadow-box
                .content-box
                  .title
                    %b
                      ពត៍មានគ្រួសារ
                  .content-display{:style => "margin-top:2rem;"}
                    %form{:role => "form"}
                      .form-group.meddium-margin-bottom
                        %label.small-gray{:for => "full_name"} ឪពុកឈ្មោះ
                        .content-data
                          %b
                            = " : " + @user.father_name
                      .form-group.meddium-margin-bottom
                        %label.small-gray{:for => "address"} ម្តាយឈ្មោះ
                        .content-data
                          %b
                            = " : " + @user.mother_name
                      .form-group.meddium-margin-bottom
                        %label.small-gray{:for => "email"} អាណាព្យាបាល
                        .content-data
                          %b
                            = " : " + @user.guidance.to_s
                      - if @user.parent_contact_number.present?
                        .form-group.meddium-margin-bottom
                          %label.small-gray{:for => "pwd"} លេខទូរស័ព្ទឪពុកម្តាយ
                          .content-data
                            %b
                              = " : " + @user.parent_contact_number
                      .form-group.meddium-margin-bottom
                        %label.small-gray{:for => "name"} ចំនួនសមាជិកគ្រួសារ
                        .content-data
                          %b
                            = " : " + @user.number_of_family_member.to_s
              %br
              .shadow-box
                .content-box
                  .title
                    %b
                      ស្ថានភាពគ្រួសារ
                  .content-display{:style => "margin-top:2rem;"}
                    %form{:role => "form"}
                      .form-group.meddium-margin-bottom
                        %label.small-gray{:for => "full_name"} តើឪពុកម្តាយប្អូនមានលែងលះដែររឺទេ?
                        .big-content-data
                          %b
                            = " : " + @user.is_divorce.to_s
                      .form-group.meddium-margin-bottom
                        %label.small-gray{:for => "address"} តើមានសមាជិកណាម្នាក់មានពិការភាពដែររឺទេ?
                        .big-content-data
                          %b
                            = " : " + @user.is_disable.to_s
                      .form-group.meddium-margin-bottom
                        %label.small-gray{:for => "address"} តើក្នុងគ្រួសាររបស់សិស្សមានការប្រើប្រាស់នូវអពើហិង្សាដែរឬទេ?
                        .big-content-data
                          %b
                            = " : " + @user.is_domestic_violence.to_s
                      .form-group.meddium-margin-bottom
                        %label.small-gray{:for => "email"} តើមានសមាជិកណាមួយក្នុងគ្រួសារសិស្សមានជក់បារី?
                        .big-content-data
                          %b
                            = " : " + @user.is_smoking.to_s
                      .form-group.meddium-margin-bottom
                        %label.small-gray{:for => "pwd"} តើមានសមាជិកណាមួយក្នុងគ្រួសារសិស្សមានញៀនសុរាទេ?
                        .big-content-data
                          %b
                            = " : " + @user.is_alcoholic.to_s
                      .form-group.meddium-margin-bottom
                        %label.small-gray{:for => "name"} តើមានសមាជិកណាមួយក្នុងគ្រួសារសិស្សមានជក់គ្រឿងញៀន?
                        .big-content-data
                          %b
                            = " : " + @user.is_drug.to_s
                      .form-group.meddium-margin-bottom
                        %label.small-gray{:for => "pwd"} ប្រភេទផ្ទះរបស់សិស្ស:
                        .big-content-data
                          %b
                            = " : " + @user.house_type.to_s
                      .form-group.meddium-margin-bottom
                        %label.small-gray{:for => "name"} ចំណូលប្រចាំខែគិតជាលុយរៀលដែលមានតម្លៃ
                        .big-content-data
                          %b
                            = " : " + @user.collective_income.to_s
              %br
          #Section2.tab-pane.fade.in.active{:role => "tabpanel"}
            .col-md-12
              %br
                %b
                  %center
                    #div{style: "width:100%;", align: "left"}
                      %a.btn.icon-btn.btn-primary{:href => "#{user_path(@user.id)}"}
                        %span.glyphicon.btn-glyphicon.glyphicon-arrow-left.img-circle.text-primary>
                        = "ធ្វើតេស្តលើកទី #{@game.id}"

              %br
              ធ្វើតេស្តតំណាក់កាលទី១
              %br
              %br
              .shadow-box
                .content-box
                  .title
                  .content-display{:style => "margin-top:2rem;"}
                    %form{:role => "form"}
                      .form-group.meddium-margin-bottom
                        %label.small-gray{:for => "full_name"}
                          = image_tag "/images/book.png" ,:class=> "img-circular"
                        .content-data-long
                          %a{"href" => "#", "aria-controls" => "profile", "data-toggle" => "modal", "data-target" => "#firstTest" } ការវាយតម្លៃមុខរបរ
              %br
              %br
              ធ្វើតេស្តតំណាក់កាលទី២
              %br
              %br
              .shadow-box-top
                .content-box
                  .title
                  .content-display{:style => "margin-top:2rem;"}
                    %form{:role => "form"}
                      .form-group.meddium-margin-bottom
                        %label.small-gray{:for => "full_name"}
                          = image_tag "/images/book.png" ,:class=> "img-circular"
                        .content-data-long
                          %a{"href" => "#", "aria-controls" => "profile", "data-toggle" => "modal", "data-target" => "#secondTestOne" } ការបំពេញមុខវិជ្ជា
              .shadow-box-middle
                .content-box
                  .title
                  .content-display{:style => "margin-top:2rem;"}
                    %form{:role => "form"}
                      .form-group.meddium-margin-bottom
                        %label.small-gray{:for => "full_name"}
                          = image_tag "/images/book.png" ,:class=> "img-circular"
                        .content-data-long
                          %a{"href" => "#", "aria-controls" => "profile", "data-toggle" => "modal", "data-target" => "#secondTestTwo" } ការបំពេញបុគ្គលិកលក្ខណៈ
              .shadow-box-middle
                .content-box
                  .title
                  .content-display{:style => "margin-top:2rem;"}
                    %form{:role => "form"}
                      .form-group.meddium-margin-bottom
                        %label.small-gray{:for => "full_name"}
                          = image_tag "/images/book.png" ,:class=> "img-circular"
                        .content-data-long
                          %a{"href" => "#", "aria-controls" => "profile", "data-toggle" => "modal", "data-target" => "#secondTestThree" } ការជ្រើសរើសមុខរបរផ្អែកលើបុគ្គលិលក្ខណៈ
              .shadow-box
                .content-box-bottom
                  .title
                  .content-display{:style => "margin-top:2rem;"}
                    %form{:role => "form"}
                      .form-group.meddium-margin-bottom
                        %label.small-gray{:for => "full_name"}
                          = image_tag "/images/book.png" ,:class=> "img-circular"
                        .content-data-long
                          %a{"href" => "#", "aria-controls" => "profile", "data-toggle" => "modal", "data-target" => "#secondTestFour" } ការផ្តល់អនុសាសន៍
              %br
              %br
              ដាក់គោលដៅ និងមូលហេតុ
              %br
              %br
              .shadow-box-top
                .content-box-long
                  .title
                    %h4{style: "font-weight:strong"}
                      = @game.goal_career.name
                  .content-display{:style => "margin-top:2rem;"}
                    %form{:role => "form"}
                      .form-group.meddium-margin-bottom
                        = @game.reason
              %br
              %br

              - if schools = @game.schools.presence
                សាលាខាងក្រោមនេះមានបង្រៀនមុខវិជ្ជាដែលអ្នកចង់រៀន
                %br
                %br
                .shadow-box-top
                  .content-box
                    .content-display{:style => "margin-top:2rem;"}
                      %form{:role => "form"}
                        - schools.each do |school|
                          .form-group.meddium-margin-bottom
                            %span.fi-circle-check
                              = image_tag school.logo ,:class=> "img-circular-small"
                            %b
                              %h4{style: "font-weight: bold;"}
                                = school.name
                            %span.glyphicon.glyphicon-equalizer.text-primary
                            =school.category
                            %br
                            %span.glyphicon.glyphicon-map-marker.text-danger
                            =school.address
                            .clear
                            %hr

= render 'modal_first_test', :personal_understanding => @game.personal_understandings.first
= render 'modal_second_test_one', :subject => @game.subject
= render 'modal_second_test_two', :entries => @game.entries
= render 'modal_second_test_three', :careers => @game.careers
= render 'modal_second_test_four', :careers => @game.careers

