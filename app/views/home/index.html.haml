= render 'shared/side_nav'
.main
  .filter
    %select.noborder.selectpicker{:title => "សាលា"}
      - @schools.each do |school|
        %option
          = school
    %select.noborder.selectpicker{:title => "ថ្នាក់"}
      - @grades.each do |grade|
        %option
          = grade
  %br
  %table.table-bordered.table.central{style: "width:80%;", align: "center"}
    %thead
      %tr
        %th{width: 60} #
        %th សិស្ស
        %th ភេទ
        %th ថ្នាក់ទី
    %tbody
      - @users.each do |user|
        %tr
          %td
            = link_to user.id, user_path(user.id)
          %td 
            = link_to user.full_name, user_path(user.id)
          %td 
            = user.sex
          %td
            = user.grade
      