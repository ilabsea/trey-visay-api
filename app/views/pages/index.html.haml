/ Page Heading
= render "page_heading"
= render 'shared/filters/name_code_filter', url: pages_path

.card.shadow.mb-4
  .card-body
    .table-responsive.mb-4
      %table.table.table-hover.pretty
        %thead
          %tr
            %th{width: 60} #
            %th= t('shared.code')
            %th= t('shared.name_km')
            %th= t('shared.name_en')
            %th= t('visit.number_of_visit')
            %th= t('shared.created_at')
            %th= t('shared.updated_at')
            %th

        %tbody#body-content
          - @pages.roots.each_with_index do |page, index|
            = render "page", page: page, num: index + 1
