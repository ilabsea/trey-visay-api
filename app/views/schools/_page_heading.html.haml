= render "shared/headers/page_heading", title: t('school.school') do
  .d-flex
    .mr-2= render "shared/buttons/download_button", url: schools_path(filter_params.merge(format: :xlsx))

    = render "shared/buttons/add_new_button", url: new_school_path

    / More Options
    - if policy(School).create?
      %button.btn.btn-sm{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :type => "button"}
        %i.fas.fa-ellipsis-v

      .dropdown-menu.dropdown-menu-right
        %a.btn.dropdown-item{ href: new_school_importer_path }
          %i.fas.fa-file-import.drop-menu-icon
          %span= t("shared.import_from_zip_file")

        %a.btn.dropdown-item{ href: school_importers_path }
          %i.fas.fa-history.drop-menu-icon
          %span= t('shared.importing_history', name: t('sidebar.school'))

        - if current_account.primary_admin?
          %a.btn.dropdown-item{ href: schools_path(format: :json), target: '_blank' }
            %i.fas.fa-download.drop-menu-icon
            %span= t('shared.download_json')
