#hintModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "exampleModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog{:role => "document"}
    .modal-content
      .modal-header
        %h5.modal-title= t('user.how_to_get_user_id')
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—

      .modal-body
        %ol
          %li= t('user.go_to_app')
          %li
            = t('user.click_on_tab_other')
            = image_tag "tab_other.jpg", height: 24
          %li= t('user.copy_user_uuid')

        .w-75.m-auto.mt-3
          = image_tag "app_user_profile.jpg", style: 'width: 100%'

      .modal-footer
        %button.btn.btn-secondary{"data-dismiss": "modal", type: "button"}= t('shared.close')
