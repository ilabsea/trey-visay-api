.container
  .center
    = image_tag 'logo.png', class: 'logo'
    %h2.title ត្រីវិស័យ

  .control-wrapper
    %h3 Account Activation for

    = form_for resource, :as => resource_name, :url => update_account_confirmation_path, :html => {:method => 'put'}, :id => 'activation-form' do |f|

      .alert.alert-danger.notify-message
        %button.close{type: 'button', 'data-dismiss' => 'alert', 'aria-label' => 'Close'}
        = devise_error_messages!

      %fieldset
        %legend
          = resource.try(:email)

        - if @requires_password
          .form-group
            = f.label :password, 'Choose a Password'
            = f.password_field :password, class: 'form-control'
          .form-group
            = f.label :password_confirmation, 'Password Confirmation'
            = f.password_field :password_confirmation, class: 'form-control'

        = hidden_field_tag :confirmation_token, @confirmation_token

        .actions
          = f.submit "Activate", class: 'btn btn-primary mb-2'
