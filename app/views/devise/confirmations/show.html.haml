.form-wrapper
  %h2.mb-4 Account Activation for

  = form_for resource, :as => resource_name, :url => update_account_confirmation_path, :html => {:method => 'put'}, :id => 'activation-form' do |f|
    %fieldset
      %legend
        = resource.try(:email)

      = devise_error_messages!

      - if @requires_password
        .form-group
          = f.label :password, 'Choose a Password'
          = f.password_field :password, class: 'form-control'
        .form-group
          = f.label :password_confirmation, 'Password Confirmation'
          = f.password_field :password_confirmation, class: 'form-control'

      = hidden_field_tag :confirmation_token, @confirmation_token

      .actions
        = f.submit "Activate", class: 'btn btn-primary mb-2 w-100'
