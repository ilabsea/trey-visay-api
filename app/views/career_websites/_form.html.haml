.container{style: 'width: 50%'}
  = simple_form_for @career_website do |f|
    .image-wrapper.position-relative
      = image_tag @career_website.logo_or_default, class: 'program-logo', 'data-default' => image_path('default_logo.png')
      = f.input :logo, as: :file, label: false, wrapper_html: { class: 'file_wrapper' }, input_html: { class: 'file_avata pointer input-logo' }

      = f.input :remove_logo, as: :boolean, input_html: {class: 'remove-logo'}, wrapper_html: {class: 'remove-logo-wrapper'}
      .btn-delete.pointer{class: ('d-none' unless @career_website.logo_url.present?) }
        %i.fas.fa-trash-alt.text-white

    .text-center.mt-2
      %small 250 x 250 (32-bit PNG)

    = f.input :name, label: t('shared.name')
    = f.input :url, label: t('shared.url')
    = f.input :description, label: t('shared.descrtion')

    .actions
      = link_to t('shared.cancel'), career_websites_path, class: 'btn btn-secondary'
      = f.submit t('shared.save'), class: 'btn btn-primary'
