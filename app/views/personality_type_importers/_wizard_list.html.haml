.table-responsive
  %table.table.table-hover.pretty
    %thead
      %tr
        %th #
        %th= t('shared.code')
        %th= t("shared.name_km")
        %th= t("shared.name_en")
        %th= t('personality_type.description')
        %th= t('personality_type.personal_value')
        %th= t('personality_type.skill_and_ability')
        %th= t('shared.recommendation')
        %th

    %tbody
      - @batch.importing_items.each_with_index do |importing_item, index|
        - item = importing_item.itemable
        - if item.valid?
          = f.fields_for :importing_items, importing_item do |ff|
            = ff.hidden_field :itemable_id
            = ff.hidden_field :itemable_type
            = ff.fields_for :itemable, item do |fff|
              = fff.hidden_field :id
              = fff.hidden_field :code
              = fff.hidden_field :name_km
              = fff.hidden_field :name_en
              = fff.hidden_field :description
              = fff.hidden_field :personal_value
              = fff.hidden_field :skill_and_ability
              = fff.hidden_field :recommendation

        %tr
          %td= index + 1
          %td= item.code
          %td= item.name_km
          %td= item.name_en
          %td= item.description
          %td= item.personal_value
          %td= item.skill_and_ability
          %td= item.recommendation

          / Validation status
          %td= render "shared/validation_status", item: item
